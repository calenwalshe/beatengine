{
  "mode": "m4",
  "bpm": 128,
  "ppq": 1920,
  "bars": 64,
  "seed": 7771,
  "out": "out/custom/syncopated_layers_128.mid",
  "log_path": "out/custom/syncopated_layers_128.csv",
  "guard": {"min_E": 0.7, "max_rot_rate": 0.12, "kick_immutable": false},
  "targets": {
    "S_low": 0.45,
    "S_high": 0.70,
    "H_low": 0.40,
    "H_high": 0.70,
    "hat_density_target": 0.75,
    "hat_density_tol": 0.05
  },
  "layers": {
    "kick": {
      "rot": 1,
      "rotation_rate_per_bar": 0.08,
      "ghost_pre1_prob": 0.35,
      "displace_into_2_prob": 0.25
    },
    "hat_c": {
      "steps": 16,
      "fills": 11,
      "swing_percent": 0.56,
      "beat_bins_ms": [-12, -8, -4, 0],
      "beat_bins_probs": [0.4, 0.3, 0.2, 0.1],
      "beat_bin_cap_ms": 12,
      "conditions": [
        {"kind": "EVERY_N", "n": 3, "offset": 1},
        {"kind": "PROB", "p": 0.9}
      ]
    },
    "hat_o": {
      "steps": 16,
      "fills": 16,
      "offbeats_only": true,
      "ratchet_prob": 0.14,
      "ratchet_repeat": 3,
      "swing_percent": 0.55,
      "beat_bins_ms": [-2, 0, 2],
      "beat_bins_probs": [0.2, 0.6, 0.2],
      "beat_bin_cap_ms": 10,
      "choke_with_note": 42,
      "conditions": [{"kind": "PROB", "p": 0.85}]
    },
    "snare": {
      "steps": 16,
      "fills": 3,
      "rot": 5,
      "velocity": 96,
      "conditions": [
        {"kind": "PROB", "p": 0.7},
        {"kind": "EVERY_N", "n": 4, "offset": 2, "negate": true}
      ]
    },
    "clap": {
      "steps": 16,
      "fills": 2,
      "rot": 4,
      "velocity": 92,
      "conditions": [
        {"kind": "PROB", "p": 0.6},
        {"kind": "EVERY_N", "n": 8, "offset": 4}
      ]
    }
  },
  "modulators": [
    {
      "name": "hat_swing",
      "param_path": "hat_c.swing_percent",
      "mod": {
        "mode": "ou",
        "min_val": 0.53,
        "max_val": 0.60,
        "step_per_bar": 0.007,
        "tau": 24,
        "max_delta_per_bar": 0.01
      }
    },
    {
      "name": "oh_ratchet",
      "param_path": "hat_o.ratchet_prob",
      "mod": {
        "mode": "random_walk",
        "min_val": 0.10,
        "max_val": 0.25,
        "step_per_bar": 0.015,
        "max_delta_per_bar": 0.02
      }
    },
    {
      "name": "thin_bias",
      "param_path": "thin_bias",
      "mod": {
        "mode": "ou",
        "min_val": -0.65,
        "max_val": -0.10,
        "step_per_bar": 0.02,
        "tau": 28,
        "max_delta_per_bar": 0.03
      }
    }
  ]
}

